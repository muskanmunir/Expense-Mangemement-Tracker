        <div class="filter">
            <form action="/filter">
                <select name="key" id="">
                    <option value="amount">Amount</option>
                    <option value="remark">Remark</option>
                    <option value="category">Category</option>
                    <option value="paymentmode">Payment Mode</option>
                    <option value="date">Date</option>
                </select>
                <input type="text" name="value" placeholder="Enter search term" />
                <button>Filter <i class="ri-filter-3-line"></i></i></button>
            </form>
        </div>
    
       
       <div class="main-card">
        <br><br>
            <table border="1">
               <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Catagory</th>
                <th>Payment</th>
                <th>Remark</th>
                <th>delete / edit</th>
             </tr>
             <% expenses.forEach((e)=> { %>
                <tr> 
                    <td>
                        <%= e.date %>
                    </td>
                    <td>
                        <%= e.amount %>
                    </td>
                    <td>
                        <%= e.category %>
                    </td>
                    <td>
                        <%= e.paymentmode %>
                    </td>
                    <td>
                        <%= e.remark %>
                    </td>
                    <td>
                        <a class="delt" href="/delete/<%= e.id%>"><i class="ri-delete-bin-5-fill"></i></a>
                        <a class="updte" href="/update/<%= e.id%>"><i class="ri-edit-line"></i></a>
                    </td>
                </tr>
                <% }) %>
            </table>
            <div id="total">
                Total Expense: <%= expenses.reduce((ac,cv)=> ac+cv.amount, 0)%>
        
            </div>
